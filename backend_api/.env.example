# Example environment variables for backend_api (prod/staging)
SPRING_PROFILES_ACTIVE=prod

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://host:5432/db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Security / JWT
JWT_SECRET=please_generate_a_secure_random_base64_secret
JWT_EXP_MIN=60
FRONTEND_ORIGIN=http://localhost:3000

# Scheduler
PRICES_CRON=0 0 * * * *

# Mail placeholders
MAIL_HOST=
MAIL_API_KEY=
MAIL_FROM=no-reply@example.com

# Scraper URLs (optional overrides)
SCRAPER_RETAILER_A_URL=https://reta.example.com
SCRAPER_RETAILER_B_URL=https://retb.example.com
