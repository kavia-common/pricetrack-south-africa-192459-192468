# Backend API - .env.example
# Copy this file to .env and adjust values as needed.

# Spring profile (dev uses H2 in-memory DB; prod uses PostgreSQL via SPRING_DATASOURCE_* vars)
SPRING_PROFILES_ACTIVE=dev

# CORS: set to your frontend origin (React dev server defaults to http://localhost:3000)
FRONTEND_ORIGIN=http://localhost:3000

# JWT secret (base64 or raw string; service will base64-encode raw strings)
# Use at least 32 characters for HMAC key strength
JWT_SECRET=change_me_for_dev_only_change_me_for_dev_only
# Access token expiry in minutes
JWT_EXP_MIN=60

# Scheduler cron for price checks (Spring cron format: sec min hour day month day-of-week)
PRICES_CRON=0 0 * * * *

# Scraper configuration placeholders
SCRAPER_RETAILER_A_URL=https://reta.example.com
SCRAPER_RETAILER_B_URL=https://retb.example.com

# Optional: Email provider placeholders for future integration
MAIL_HOST=
MAIL_API_KEY=
MAIL_FROM=no-reply@example.com

# Production database settings (only used when SPRING_PROFILES_ACTIVE=prod)
# SPRING_DATASOURCE_URL=jdbc:postgresql://host:5432/db
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=postgres
